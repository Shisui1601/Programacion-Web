@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="container">
    <!-- Barra lateral fija -->
    <div class="sidebar">
        <h2>Panel de Agente</h2>
        <ul>
            <li><NavLink href="/agente/registrar-multa">Registrar Multa</NavLink></li>
            <li><NavLink href="/agente/listado-multas">Listado de Multas</NavLink></li>
            <li><NavLink href="/agente/mapa-multas">Mapa con Mis Multas</NavLink></li>
            <li><NavLink href="/agente/comision-mes">Comisión por Mes</NavLink></li>
            <li><NavLink href="/agente/acerca">Acerca de</NavLink></li>
        </ul>
        <BotonRegresar />
    </div>

    <!-- Contenido principal -->
    <div class="main-content">
        @Body  
    </div>
</div>

<style>
    /* Contenedor principal con barra lateral y contenido */
    .container {
        display: flex;
        height: 100vh;
        background-color: #f4f4f4;
    }

    /* Barra lateral fija */
   .sidebar {
    position: fixed;
    top: 0; /* Asegura que esté en la parte superior */
    left: 0; /* Pegado al borde izquierdo */
    width: 250px;
    height: 100vh; /* Altura completa de la ventana */
    background-color: #2c3e50;
    color: white;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    z-index: 1000; /* Asegura que esté sobre otros elementos */
    box-shadow: 2px 0 5px rgba(0,0,0,0.1); /* Añade un sutil sombreado */
}

    .sidebar h2 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        text-align: center;
    }

    .sidebar ul {
        list-style-type: none;
        padding: 0;
    }

    .sidebar ul li {
        margin: 1rem 0;
    }

    .sidebar ul li a {
        color: white;
        text-decoration: none;
    }

    .sidebar ul li a:hover {
        color: #1abc9c;
        padding-left: 10px;
    }

    /* Contenido principal */
    .main-content {
        margin-left: 250px; /* Esto asegura que el contenido no se superponga con la barra lateral */
        flex-grow: 1;
        padding: 2rem;
        background-color: #ecf0f1;
        overflow-y: auto;
    }

    .content-header h1 {
        font-size: 2rem;
        color: #34495e;
    }

    .content-header p {
        font-size: 1.2rem;
        color: #7f8c8d;
    }
</style>
