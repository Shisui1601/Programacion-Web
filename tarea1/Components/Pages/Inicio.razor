@page "/"

@rendermode InteractiveServer

<PageTitle>Inicio</PageTitle>

<style>
    .container {
        text-align: center;
        padding: 50px;
        background: #f0f8ff;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        transition: background 0.3s ease, box-shadow 0.3s ease;
    }

    .container:hover {
        background: #e6f7ff;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
    }

    h1 {
        color: #007bff;
        font-size: 2.5rem;
        margin-bottom: 20px;
        transition: color 0.3s ease;
    }

    h1:hover {
        color: #0056b3;
    }

    p {
        color: #333;
        font-size: 1.25rem;
        line-height: 1.5;
    }

    .motivational-quote {
        font-style: italic;
        color: #555;
        margin-top: 20px;
